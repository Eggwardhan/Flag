.container{
  height: 1500rpx;
}
.list-box{
    padding: 30rpx 20rpx;
}
.newest-list{
    display: inline-block;
    width: 750rpx;
    height: 347rpx;
    margin:0 15rpx 10rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}
.newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-list image{
    width: 500rpx;
    height: 250rpx;
    margin: 30rpx 0 20rpx;
    
}
.newest-list .newest-text{
    font-size: 32rpx;
    line-height: 45rpx;
}
.top-tab{
  width: 800rpx;
  height: 100rpx;
  background: #a0eee1;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 99;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}
.float-action {
  position: fixed;
  bottom: 20px;
  right: 30px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  box-shadow: 2px 2px 10px #AAA;
  background: #1891D4;
  z-index: 100;
}


.scroll_box{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
}
.item_list{
  width: 600rpx;
  height: 400rpx;
  margin: 30rpx 0 50rpx 6.5%;
  border-radius: 4.5%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.5);
  display: inline-flex;
  flex-direction: column;
  overflow: hidden;
}
.item_list:last-child {
  margin-right: 6.5%;
}
.item_list image {
  width: 100%;
  height: 152rpx;
}
.item_list_buttom {
  flex: 1;
  padding: 20rpx 46rpx;
  background-color: #ffffff;
}
.item_list_buttom_text{
  white-space: normal;
  margin-top: 20rpx;
}

.item_list_buttom_foot{
  text-align: right;
  color: rgba(0, 0, 0, 0.5);
}

.listText {
  display: inline-block;
  width: 228rpx;
  text-align: center;
  margin-top: 10rpx;
}
